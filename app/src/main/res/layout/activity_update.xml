<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateActivity">

    <TextView
        android:id="@+id/editNoteHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Update Note.."
        android:textColor="@color/orange"
        android:textSize="24dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_assignment_turned_in_24"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/editNoteHeading"
        android:layout_marginEnd="18dp"
        android:id="@+id/updateSaveBtn"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Heading..."
        android:layout_below="@id/editNoteHeading"
        android:background="@drawable/orange_border"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        android:id="@+id/updateEditTitleText"
        android:maxLines="1"
        android:fontFamily="@font/poppins_medium"
        android:textSize="20sp"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/updateEditContext"
        android:fontFamily="@font/poppins_medium"
        android:hint="Description................."
        android:gravity="top"
        android:padding="16dp"
        android:textSize="20sp"
        android:background="@drawable/orange_border"
        android:layout_below="@id/updateEditTitleText"
        android:layout_marginTop="10dp"

        />

</RelativeLayout>